pipeline {
    agent none
    parameters {
        file description: 'Installer', name: 'INSTALLER'
    }
    stages {
        stage("A") {
            agent any
            steps {
                step([  $class: 'CopyArtifact',
                        filter: '*',
                        fingerprintArtifacts: true,
                        projectName: 'piperbuild',
                        selector: buildParameter('INSTALLER')
                ])
                echo 'A'
            }
        }
        stage("B") {
            agent any
            steps {
                echo 'B'
                echo "${params.INSTALLER}"
            }
        }
    }
}
