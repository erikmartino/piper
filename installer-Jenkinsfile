pipeline {
    agent none
    parameters {
        run description: 'Installer', filter: 'STABLE', name: 'INSTALLER', projectName: 'piperbuild'
    }
    stages {
        stage("A") {
            agent any
            steps {
                echo 'A'
                echo "${params.INSTALLER}"
            }
        }
        stage("B") {
            agent any
            steps {
                echo 'B'
                echo "${params.INSTALLER}"
            }
        }
    }
}
