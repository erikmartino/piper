pipeline {
    agent none
    parameters {
        run description: 'Installer', filter: 'STABLE', name: 'INSTALLER', projectName: 'piperbuild'
    }
    stages {
        stage("A") {
            agent any
            steps {
                step([  $class: 'CopyArtifact',
                        filter: 'a.out',
                        fingerprintArtifacts: true,
                        projectName: 'piperbuild',
                        selector: params.INSTALLER
                ])
                echo 'A'
                echo "${params.INSTALLER}"
            }
        }
        stage("B") {
            agent any
            steps {
                echo 'B'
                echo "${params.INSTALLER}"
            }
        }
    }
}
